  <div class="screen-wrapper">
    <div class="app-background"></div>
    <div class="kricket-page">

      <!-- Status bar -->
      <div class="status-bar">
        <div class="status-bar__icons">
          <span class="icon"></span>
          <span class="icon"></span>
          <span class="icon"></span>
        </div>
      </div>

      <!-- Top nav -->
      <div class="navbar navbar-light navbar-lewagon">
        <div class="container-fluid navbar-mobile">

          <!-- LEFT: hamburger -->
          <%= link_to chats_path, class: "navbar-toggler" do %>
            <span class="navbar-toggler-icon"></span>
          <% end %>

          <!-- CENTER: brand name -->
          <div class="navbar-title" style="font-size: 1.6rem;">Kricket</div>

          <!-- RIGHT: icon -->
          <div class="navbar-right-icon">
            <i class="fa-regular fa-user" type="button"></i>
          </div>

        </div>
      </div>

      <!-- Spiciness slider -->
      <section class="spice">
        <div class="spice_label"></div>

        <div class="spice_row">
          <span class="spice_pepper-left">üå∂Ô∏è</span>

          <input
            type="range"
            class="spice-slider"
            min="0"
            max="2"
            step="0.1"
            value="1"
          />

          <div class="spice_pepper-level" data-level="1">
            <span class="pepper" data-index="1">üå∂Ô∏è</span>
            <span class="pepper" data-index="2">üå∂Ô∏è</span>
          </div>
        </div>

        <p class="text-primary" style="font-size: 0.8rem;">
          Click here to select how weird <br> Kricket‚Äôs responses are
        </p>
      </section>

      <!-- Main text -->
      <section class="glass-container">
        <canvas class="glass-blob"></canvas>

        <div class="glass-content">
          <h1 class="text-primary" style="font-size: 1.4rem;">Type a topic to start a conversation with Kricket</h1>
        </div>
      </section>

      <section class="glass-container">
        <canvas class="glass-blob"></canvas>

        <div class="glass-content">
          <h1 class="text-primary" style="font-size: 1.4rem;">
            Activate Kricket. When the convo dips, it serves you something interesting to keep the vibe alive!
          </h1>
        </div>
      </section>

      <!-- button block -->
      <div class="interaction-block">
        <div style="text-align: center;">
          <p class="text-primary" style="font-size: 0.6rem; margin-bottom: 6px;">
            No silence survives on my watch! <br>
            Press GO to start your Kricket conversation
          </p>

          <%= link_to chat_path(Chat.last),
                      class: "go-button success text-center",
                      style: "font-size: 1.1rem; display: inline-block; text-decoration: none;" do %>
            <i class="fa-solid fa-play"></i> GO
          <% end %>
        </div>
      </div>

        <!-- Bottom section with tighter spacing -->
        <div style="text-align: center;">
          <p class="text-primary" style="font-size: 0.6rem; margin-bottom: 6px;">
            Click here for Kricket to reply with voice or text if you‚Äôre in silent mode
          </p>

          <div class="mode-toggle-wrapper">
            <div class="mode-toggle">
              <button class="mode-toggle_btn mode-toggle_btn-left mode-toggle_btn-active" data-mode="voice">
                Voice
              </button>
              <button class="mode-toggle_btn mode-toggle_btn-right" data-mode="text">
                Text
              </button>
            </div>
          </div>
        </div>

      </div>

    </div>
  </div>
