<h1>Chat</h1>
<div class="messages">
  <% @chat.messages.order(created_at: :asc).each do |message| %>
    <div class="message <%= message.role %>">
      <strong><%= message.role.capitalize %>:</strong>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>
<div class="id_message_container">
  <%= simple_form_for [@chat, @message] do |f| %>
    <%=f.input :content, placeholder: "Type your topic here" %>
    <%= f.button :submit, 'Tell Kricket', class: 'btn btn-primary' %>
  <% end %>
</div>
