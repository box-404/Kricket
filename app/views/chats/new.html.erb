<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Kricket UI Kit Demo</title>
</head>
<body>
  <div class="screen-wrapper">
    <div class="kricket-page">

      <!-- Status bar -->
      <div class="status-bar">
        <div class="status-bar__icons">
          <span class="icon"></span>
          <span class="icon"></span>
          <span class="icon"></span>
        </div>
      </div>

      <!-- Top nav -->
      <div class="navbar navbar-light navbar-lewagon">
        <div class="container-fluid navbar-mobile">

          <!-- LEFT: hamburger -->
          <button class="navbar-toggler" type="button">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- CENTER: brand name -->
          <div class="navbar-title">Kricket</div>

          <!-- RIGHT: icon -->
          <div class="navbar-right-icon">
            <i class="fa-regular fa-user" type="button"></i>
          </div>

        </div>
      </div>

      <!-- Spiciness slider -->
      <section class="spice">
        <div class="spice_label">Choose spiciness level</div>

        <div class="spice_row">
          <span class="spice_pepper-left">üå∂Ô∏è</span>

          <input
            type="range"
            class="spice-slider"
            min="0"
            max="2"
            step="0.1"
            value="1"
          />

          <div class="spice_pepper-level" data-level="1">
            <span class="pepper" data-index="1">üå∂Ô∏è</span>
            <span class="pepper" data-index="2">üå∂Ô∏è</span>
          </div>
        </div>
      </section>

      <!-- Main text -->
      <section class="main-text">
        <h1 class="main-text_title">
          Type a topic to start a<br>
          conversation with Kricket
        </h1>
      </section>

      <!-- Input -->
      <section class="input-section">
        <div class="input">
          <span class="input_icon"></span>
          <input type="text" placeholder="üîç Type here">
          <span class="input_icon input_icon-right">
            <i class="fa-solid fa-microphone"></i>
          </span>
        </div>
      </section>

      <!-- button block -->
      <div class="interaction-block">
        <div class="go-button-wrapper">
          <button class="go-button"><i class="fa-solid fa-play"></i>  Go  </button>
        </div>

        <div class="mode-toggle-wrapper">
          <div class="mode-toggle">
            <button class="mode-toggle_btn mode-toggle_btn-left mode-toggle_btn-active" data-mode="voice">
              Voice
            </button>
            <button class="mode-toggle_btn mode-toggle_btn-right" data-mode="text">
              Text
            </button>
          </div>
        </div>
      </div>

    </div>
  </div>
</body>
</html>
